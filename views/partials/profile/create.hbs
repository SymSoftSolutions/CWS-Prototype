<fieldset>
    <strong> <label for="email">Email:</label></strong>
    <input type="email" id="email" placeholder="example@email.com" class="input--flat">
    <span class="input--help">Will be used for your unique identifier.</span>
</fieldset>

<fieldset>
    <strong><label for="firstName">First Name:</label></strong>
    <input type="text" id="firstName" placeholder="John" class="input--flat">
    <strong><label for="lastName">Last Name:</label></strong>
    <input type="text" id="lastName" placeholder="Doe" class="input--flat">

    <strong> <label for="password">Password:</label></strong>
    <input type="password" id="password" class="input--flat">

    <strong><label for="confirmPassword">Confirm Password:</label></strong>
    <input type="password" id="confirmPassword" class="input--flat">
</fieldset>