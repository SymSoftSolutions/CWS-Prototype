{{#if user.avatar}}
    <img src="{{getAvatarPath user.avatar}}" class="avatar-image js-avatar-editor-show" alt="User Avatar" data-toggle="modal" data-target="#avataredit">
{{else}}
    <svg class="js-avatar-editor-show svg-icon avatar-placeholder " viewBox="0 0 24 24" width="24" height="24"
         xmlns="http://www.w3.org/2000/svg" data-toggle="modal" data-target="#avataredit">
        <path d="M0 0h24v24H0z" fill="none"/>
        <path d="M15 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm-9-2V7H4v3H1v2h3v3h2v-3h3v-2H6zm9 4c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
    </svg>
{{/if}}


<!-- Modal -->
<div class="modal fade" id="avataredit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Avatar Editor</h4>
            </div>
            <div class="modal-body">
                <p>This editor window allows you to add, modify or
                    delete your profile's avater.</p>

                <div class="image-editor">

                    <input type="file" class="cropit-image-input center-block"><br/>
                    <div class="cropit-preview center-block"></div>
                    <br/>
                    <input type="range" class="cropit-image-zoom-input">
                    <div class="image-size-label">
                        Resize image
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary js-avatar-update">Save</button>
                <button type="button" class="btn btn-delete js-avatar-delete">Delete</button>
                <span id="avatar_loading_msg">Loading...&nbsp;</span>
            </div>
        </div>
    </div>
</div>
