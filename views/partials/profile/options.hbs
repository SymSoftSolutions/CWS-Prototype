<form action="update" method="post"  id="updateprofile" class="js-accordion js-profile-update" data-accordion-prefix-classes="animated-accordion">
    <div class="row profile-update-info">
        <button id="update_profile_btn" type="submit" form="updateprofile" value="Submit" class="btn btn-primary">Save updated Info</button>
    </div>

        <div class="col-xs-12">
            <div class=" js-accordion__header">
                <h3 data-accordion-opened="false">Who do you want to foster?</h3>
            </div>

            <div class="js-accordion__panel">
                {{> profile/childrenpreferences childpref=user.userDetails.childpref childtype=user.userDetails.childtype}}
            </div>
        </div>
        <div class="col-xs-12">
            <div class=" js-accordion__header">
                <h3  data-accordion-opened="true">Adults at your Home</h3>
            </div>
            <div class="js-accordion__panel ">
                <div class="js-profile-adult-container">
                    <p>Simplify the placement process by sharing who lives at your home.</p>
                    <table class="table">
                        <caption>Existing Adults</caption>
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Age</th>
                            <th>Relationship</th>
                            <th>Remove</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each user.userDetails.adults}}
                            {{> profile/exisitingadult adult=this index=@index}}
                        {{/each}}
                        </tbody>
                    </table>
                </div>
                <button type="button"  class=" btn btn-default js-profile-add-adult" aria-label="Add Adult">Add Adult</button>
            </div>
        </div>



        <div class="col-xs-12">
            <div class=" js-accordion__header">
                <h3  data-accordion-opened="false">About your Residence</h3>
            </div>
            <div class="js-accordion__panel">
                {{> profile/residence residence = user.userDetails.residence }}
            </div>
        </div>
        <div class="col-xs-12">
            <div class=" js-accordion__header">
                <h3  data-accordion-opened="false">Children at your Home</h3>
            </div>
            <div class="js-accordion__panel ">
                <div class="js-profile-children-container">
                    <p>Save time during placement by sharing who lives at your home.</p>
                    <table class="table">
                        <caption>Existing Children</caption>
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Age</th>
                            <th>Relationship</th>
                            <!--<th>Sex</th>-->
                            <th>Remove</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each user.userDetails.children}}
                            {{> profile/exisitingchildren child=this index=@index}}
                        {{/each}}
                        </tbody>
                    </table>

                </div>
                <button type="button" class=" btn btn-default js-profile-add-children" aria-label="Add Child">Add Child</button>
            </div>

    </div>


</form>
