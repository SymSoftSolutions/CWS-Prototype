<div class="form profile-editing-info ">
    <legend> New Adult</legend>

    <label for="firstName" class="control-label">First Name:</label>
    <input type="text" id="firstName" value="{{adult.firstName}}"
           name="userDetails[adults][{{index}}][firstName]"
           placeholder="John" class="form-control">


    <label for="lastName" class="control-label">Last Name:</label>
    <input type="text" value="{{adult.lastName}}" name="userDetails[adults][{{index}}][lastName]" id="lastName"
           placeholder="Doe" class="form-control">


    <label for="dateofbirth">Date of Birth:</label>
    <div class="row-flex">
        <div style="max-width:150px;">
            {{> months selected=adult.dob.month name=(adultBirthMonth index)}}
        </div>

        <input type="text" value="{{adult.dob.day}}" name="userDetails[adults][{{index}}][dob][day]"
               placeholder="day"
               class="form-control" style="width:50px;">
        <input type="text" value="{{adult.dob.year}}" name="userDetails[adults][{{index}}][dob][year]"
               placeholder="year" class="form-control" style="width:100px;">
    </div>

    <label for="relationship">Relationship with You?</label>
    <input type="text" id="relationship" value="{{adult.relationship}}"
           name="userDetails[adults][{{index}}][relationship]" class="form-control">
</div>