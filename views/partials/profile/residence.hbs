<fieldset class="js-residence-about">
    <p>Find foster agencies near your home, and get started with home visits by providing your address.</p>

    <label for="address-input">Street Address:</label>
    <input type="text" name="userDetails[residence][address]" value="{{residence.address}}" id="address-input"/>
    <label for="city-input">City:</label>
    <input type="text" name="userDetails[residence][city]" value="{{residence.city}}" id="city-input"/>
    <label for="zip-input">ZIP Code:</label>
    <input type="number" id="zip-input" name="userDetails[residence][zipcode]" value="{{residence.zipcode}}" />
    <label for="phone-input">Phone</label>
    <input type="text" id="phone-input" name="userDetails[residence][phone]"  value="{{residence.phone}}" />

            <label for="select-state">State:</label>
            {{> states  selected=residence.state name="userDetails[residence][state]" }}

    <label>Type of Residence</label>
    <div class="row residence-radio-group form--inline">
            <label for="res-own-radio">Own</label>
            <input type="radio" name="userDetails[residence][type]" value="own" {{checkedIfEqual residence.type "own"}} id="res-own-radio" />

            <label for="res-rent-radio">Rent</label>
            <input type="radio" name="userDetails[residence][type]" value="rent" {{checkedIfEqual residence.type "rent"}}   id="res-rent-radio" />

            <label for="res-lease-radio">Lease</label>
            <input type="radio" name="userDetails[residence][type]" value="lease" {{checkedIfEqual residence.type "lease"}}  />
    </div>

    <label>Do you have weapons at home?</label>
    <div class="form--inline">
        <label for="weapons_yes">Yes</label>
        <input type="radio" value="yes" id="weapons_yes" name="userDetails[residence][weapons]" {{checkedIfEqual residence.weapons "yes"}}>
        <label for="weapons_no">No </label>
        <input type="radio" value="no" id="weapons_no" name="userDetails[residence][weapons]" {{checkedIfEqual residence.weapons "no"}}>
    </div>

</fieldset>
