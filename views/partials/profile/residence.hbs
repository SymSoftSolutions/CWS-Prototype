<fieldset>

    <label for="address-input">Street Address:</label>
    <input type="text" name="address" id="address-input"/>
    <label for="city-input">City:</label>
    <input type="text" name="city" id="city-input"/>
    <label for="zip-input">ZIP Code:</label>
    <input type="number" id="zip-input" name="zipcode" />
    <label for="phone-input">Phone</label>
    <input type="text" id="phone-input" name="phone"  />
    <div class="row">
        <div class="col-xs-12">
            <label for="select-state">State:</label>
            {{> states}}
        </div>
    </div>



    <label>Type of Residence</label>
    <div class="row residence-radio-group ">
        <div class="col-xs-4 ">
            <label for="res-own-radio">Own</label>
            <input type="radio" name="residence" value="own" id="res-own-radio" />
        </div>
        <div class="col-xs-4">
            <label for="res-rent-radio">Rent</label>
            <input type="radio" name="residence" value="rent" id="res-rent-radio" />
        </div>
        <div class="col-xs-4">
            <label for="res-lease-radio">Lease</label>
            <input type="radio" name="residence" value="lease" />
        </div>
    </div>

    <div class="form--inline">
        <label for="weapons-input">Weapons in Home?</label>
        <input type="checkbox" name="weapons" />
    </div>

</fieldset>


