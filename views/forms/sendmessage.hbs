<div class="container-fluid">
    <div class="row center-xs">
        <div class="col-xs-12 col-sm-9 col-md-7 col-lg-5">
            <h1>Send Message</h1>
        </div>
    </div>
</div>

<form action="/message" method="post" class="container-fluid">

    <div class="row center-xs">
        <div class="col-xs-12 col-sm-9 col-md-7 col-lg-5">

            {{> flash}}
            <input type="hidden" name="_csrf" value="{{_csrf }}">
            <fieldset>
                <strong> <label for="recipientID">Recipient:</label></strong>
                <input type="number" id="recipientID" name="recipientID" class="input--flat">
                <span class="input--help">Will be used to identify who we are sending the message to.</span>
            </fieldset>

            <fieldset>
                <strong><label for="subject">Subject:</label></strong>
                <input type="text" id="subject" name="subject" class="input--flat">
                <strong><label for="messagetext">Message Body:</label></strong>
                <input type="text" id="messagetext" name="text" class="input--flat">
            </fieldset>
        </div>

    </div>
    <div class="row center-xs">
        <div class="col-xs-12 col-sm-9 col-md-7 col-lg-5">
            <input type="submit" value="Submit"/>
            <div>
                <a href="/login">Already have an account?</a>
            </div>
        </div>
    </div>
</form>
