<div class="container-fluid">

    <h1 class="text--center">New Profile</h1>



<form action="/newprofile" method="post" class="container-fluid">

    <div class="row-flex center-xs">
        <div class="col-xs-12 col-sm-9 col-md-7 col-lg-5">

            {{> flash}}
            <input type="hidden" name="_csrf" value="{{_csrf }}">
            <fieldset>
                <strong> <label for="email">Email:</label></strong>
                <input type="email" id="email" name="email" placeholder="example@email.com" class="input--flat">
                <span class="input--help">Will be used for your unique identifier.</span>
            </fieldset>
            <br>

            <fieldset>
                <strong><label for="firstName">First Name:</label></strong>
                <input type="text" id="firstName" name="firstName" maxlength="255" placeholder="John"
                       class="input--flat">
                <strong><label for="lastName">Last Name:</label></strong>
                <input type="text" id="lastName" name="lastName" maxlength="255" placeholder="Doe" class="input--flat">

                <strong> <label for="password">Password:</label></strong>
                <input type="password" id="password" name="password" maxlength="255" class="input--flat">

                <strong><label for="confirmPassword">Confirm Password:</label></strong>
                <input type="password" id="confirmPassword" name="confirmPassword" maxlength="255" class="input--flat">
            </fieldset>
        </div>

    </div>

    <div class="col-xs-12 text--center">
        <input type="submit" value="Submit" class="btn btn-primary"/>
        <div>
            <a href="/login">Already have an account?</a>
        </div>
    </div>

</form>
</div>
