<div class="container-fluid">
    <img src="{{getAvatarPath user.avatar}}" alt="User Avatar">
    <form action="avatar" method="post" enctype="multipart/form-data" id="avatarform">
        <input type="file" name="avatar">
    </form>
    <button type="submit" form="avatarform" value="Submit">Save</button>
    <form action="updateprofile" method="post" class="row center-xs" id="updateprofile">
        {{> profile/options}}
    </form>
    <div class="row center-xs">
        <div class="col-xs-12 col-sm-9 col-md-7 col-lg-5">
            <button type="submit" form="updateprofile" value="Submit">Save</button>
        </div>
    </div>
</div>